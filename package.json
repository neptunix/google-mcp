  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.50.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
